// Problem: Valid Anagram
// Platform: CodeChef / LeetCode
//
// ------------------------------------------------------------
// Method 1: Sorting
// Method 2: Hash Map
// Method 3: Frequency Array (Optimal)
// ------------------------------------------------------------
//
// Time & Space Complexity
// Method 1: Time O(n log n), Space O(1)
// Method 2: Time O(n), Space O(n)
// Method 3: Time O(n), Space O(1)
// ------------------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

/* ===================== METHOD 1: SORTING ===================== */
bool isAnagram_Method1(string s, string t) {
    if (s.size() != t.size())
        return false;

    sort(s.begin(), s.end());
    sort(t.begin(), t.end());

    return s == t;
}

/* ===================== METHOD 2: HASH MAP ===================== */
bool isAnagram_Method2(string s, string t) {
    if (s.size() != t.size())
        return false;

    unordered_map<char, int> m1, m2;

    for (int i = 0; i < s.size(); i++) {
        m1[s[i]]++;
        m2[t[i]]++;
    }

    return m1 == m2;
}

/* ============== METHOD 3: FREQUENCY ARRAY (OPTIMAL) ============== */
bool isAnagram_Method3(string s, string t) {
    if (s.size() != t.size())
        return false;

    int cnt[26] = {0};

    for (char c : s) {
        cnt[c - 'a']++;
    }

    for (char c : t) {
        cnt[c - 'a']--;
    }

    for (int i = 0; i < 26; i++) {
        if (cnt[i] != 0)
            return false;
    }

    return true;
}

int main() {
    string s = "anagram";
    string t = "nagaram";

    cout << "Method 1 (Sorting): " << isAnagram_Method1(s, t) << endl;
    cout << "Method 2 (Hash Map): " << isAnagram_Method2(s, t) << endl;
    cout << "Method 3 (Frequency Array): " << isAnagram_Method3(s, t) << endl;

    return 0;
}
