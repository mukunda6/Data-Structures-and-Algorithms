// LeetCode 70: Climbing Stairs
// Technique: Dynamic Programming (Bottom-Up)
//
// Idea:
// - To reach step i, you can come from:
//   1) step i-1
//   2) step i-2
// - So:
//   dp[i] = dp[i-1] + dp[i-2]
//
// Time Complexity: O(n)
// Space Complexity: O(n)

#include <bits/stdc++.h>
using namespace std;

int main() {
    int n = 3;   // number of steps

    // dp array
    vector<int> dp(n + 1, -1);

    // Base cases
    dp[0] = 1;   // 1 way to stay at ground
    dp[1] = 1;   // 1 way to climb 1 step

    // Bottom-up DP
    for (int i = 2; i <= n; i++) {
        dp[i] = dp[i - 1] + dp[i - 2];
    }

    cout << "Number of ways to climb " << n << " steps = " << dp[n];
    return 0;
}
