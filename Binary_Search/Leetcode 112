// Problem: Path Sum
// Platform: LeetCode / CodeChef
//
// -------------------------------------------------
// Approach: Recursion (DFS)
// -------------------------------------------------
// Idea:
// - Check if there exists a root-to-leaf path
//   such that sum of node values equals targetSum
// - Subtract current node value from targetSum
// - Check left or right subtree
//
// Time Complexity: O(n)
// Space Complexity: O(h) [recursion stack]
// -------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

// Definition for a binary tree node
struct TreeNode {
    int val;
    TreeNode* left;
    TreeNode* right;

    TreeNode(int x) {
        val = x;
        left = right = NULL;
    }
};

class Solution {
public:
    bool hasPathSum(TreeNode* root, int targetSum) {
        if (root == NULL) {
            return false;
        }

        // If leaf node, check remaining sum
        if (root->left == NULL && root->right == NULL) {
            return root->val == targetSum;
        }

        return hasPathSum(root->left, targetSum - root->val) ||
               hasPathSum(root->right, targetSum - root->val);
    }
};

int main() {
    /*
        Example Tree:
                5
               / \
              4   8
             /   / \
            11  13  4
           /  \        \
          7    2        1

        Target Sum = 22
    */

    TreeNode* root = new TreeNode(5);
    root->left = new TreeNode(4);
    root->right = new TreeNode(8);
    root->left->left = new TreeNode(11);
    root->left->left->left = new TreeNode(7);
    root->left->left->right = new TreeNode(2);
    root->right->left = new TreeNode(13);
    root->right->right = new TreeNode(4);
    root->right->right->right = new TreeNode(1);

    Solution obj;
    int targetSum = 22;

    cout << "Does path sum exist? "
         << (obj.hasPathSum(root, targetSum) ? "Yes" : "No") << endl;

    return 0;
}
