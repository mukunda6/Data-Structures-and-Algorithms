// ============================================================
// Problem: Minimum Bit Flips to Convert Number
// ============================================================

#include <bits/stdc++.h>
using namespace std;

class Solution {
public:

    ///////////////////////////////////////////////////////////
    // ðŸ”¹ Approach 1 â€” Check each bit (basic loop)
    ///////////////////////////////////////////////////////////
    int method1_loop(int start, int goal) {
        int num = start ^ goal;
        int count = 0;

        for (int i = 0; i < 32; i++) {
            count += (num & 1);
            num >>= 1;
        }
        return count;
    }

    ///////////////////////////////////////////////////////////
    // ðŸ”¹ Approach 2 â€” Brian Kernighanâ€™s Algorithm
    // Removes lowest set bit each iteration
    ///////////////////////////////////////////////////////////
    int method2_kernighan(int start, int goal) {
        int num = start ^ goal;
        int count = 0;

        while (num) {
            num &= (num - 1); // remove last set bit
            count++;
        }
        return count;
    }

    ///////////////////////////////////////////////////////////
    // ðŸ”¹ Approach 3 â€” Built-in Popcount (Optimal practical)
    ///////////////////////////////////////////////////////////
    int method3_builtin(int start, int goal) {
        return __builtin_popcount(start ^ goal);
    }

    ///////////////////////////////////////////////////////////
    // ðŸ”¹ Approach 4 â€” Using bitset
    ///////////////////////////////////////////////////////////
    int method4_bitset(int start, int goal) {
        bitset<32> b(start ^ goal);
        return b.count();
    }
};

/////////////////////////
// Main Driver
/////////////////////////
int main() {

    int start = 10;
    int goal  = 7;

    Solution sol;

    cout << "Method 1 (Loop)      : "
         << sol.method1_loop(start, goal) << endl;

    cout << "Method 2 (Kernighan) : "
         << sol.method2_kernighan(start, goal) << endl;

    cout << "Method 3 (Builtin)   : "
         << sol.method3_builtin(start, goal) << endl;

    cout << "Method 4 (Bitset)    : "
         << sol.method4_bitset(start, goal) << endl;

    return 0;
}
