// ============================================================
// Problem: Check if i-th Bit is Set
// Category: Bit Manipulation
//
// Approaches:
// 1Ô∏è‚É£ String Conversion
//     - Convert number to binary string
//     - Check i-th position
//     Time: O(b)   Space: O(b)
//
// 2Ô∏è‚É£ Left Shift Mask (Standard)
//     - n & (1 << i)
//     Time: O(1)   Space: O(1)
//
// 3Ô∏è‚É£ Right Shift
//     - (n >> i) & 1
//     Time: O(1)   Space: O(1)
//
// Example:
// n = 5 ‚Üí Binary 101
// i = 2 ‚Üí Bit is set ‚Üí true
// ============================================================

#include <bits/stdc++.h>
using namespace std;

class Solution {
public:

    ///////////////////////////////////////////////////////////
    // üîπ Approach 1 ‚Äî String/Binary conversion
    ///////////////////////////////////////////////////////////
    bool checkUsingString(int n, int i) {
        string binary = "";
        int temp = n;

        // Convert to reversed binary (LSB first)
        while (temp > 0) {
            binary += (temp % 2 ? '1' : '0');
            temp /= 2;
        }

        if (i >= binary.size()) return false;
        return binary[i] == '1';
    }

    ///////////////////////////////////////////////////////////
    // üîπ Approach 2 ‚Äî Left Shift Mask
    ///////////////////////////////////////////////////////////
    bool checkUsingLeftShift(int n, int i) {
        return (n & (1 << i)) != 0;
    }

    ///////////////////////////////////////////////////////////
    // üîπ Approach 3 ‚Äî Right Shift
    ///////////////////////////////////////////////////////////
    bool checkUsingRightShift(int n, int i) {
        return ((n >> i) & 1) == 1;
    }
};

/////////////////////////
// Main Test Driver
/////////////////////////
int main() {

    Solution sol;

    int num = 5;      // Binary: 101
    int bitIndex = 2; // Check bit

    cout << "Using String Approach : "
         << sol.checkUsingString(num, bitIndex) << endl;

    cout << "Using Left Shift      : "
         << sol.checkUsingLeftShift(num, bitIndex) << endl;

    cout << "Using Right Shift     : "
         << sol.checkUsingRightShift(num, bitIndex) << endl;

    return 0;
}
