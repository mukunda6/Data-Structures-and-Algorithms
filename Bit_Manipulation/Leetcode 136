// Problem: Single Number
// Platform: LeetCode / CodeChef
//
// Approaches:
// 1. XOR Method (BEST & REQUIRED)
// 2. Linear Search (Brute Force)
// 3. Hash Map
// 4. Sorting
// 5. Set Method
//
// Time Complexity:
// XOR: O(n)
// Linear: O(n^2)
// Hash Map: O(n)
// Sorting: O(n log n)
// Set: O(n)
//
// Space Complexity:
// XOR: O(1)
// Linear: O(1)
// Hash Map: O(n)
// Sorting: O(1) or O(log n)
// Set: O(n)

#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    //////////////////////////////////////
    // 1️⃣ XOR Method (BEST)
    //////////////////////////////////////
    int singleNumberXOR(vector<int>& nums) {
        int ans = 0;
        for (int x : nums) {
            ans ^= x;
        }
        return ans;
    }

    //////////////////////////////////////
    // 2️⃣ Linear Search (Brute Force)
    //////////////////////////////////////
    int singleNumberLinear(vector<int>& nums) {
        int n = nums.size();
        for (int i = 0; i < n; i++) {
            bool found = false;
            for (int j = 0; j < n; j++) {
                if (i != j && nums[i] == nums[j]) {
                    found = true;
                    break;
                }
            }
            if (!found) return nums[i];
        }
        return -1;
    }

    //////////////////////////////////////
    // 3️⃣ Hash Map Method
    //////////////////////////////////////
    int singleNumberMap(vector<int>& nums) {
        unordered_map<int, int> freq;
        for (int x : nums) {
            freq[x]++;
        }
        for (auto it : freq) {
            if (it.second == 1)
                return it.first;
        }
        return -1;
    }

    //////////////////////////////////////
    // 4️⃣ Sorting Method
    //////////////////////////////////////
    int singleNumberSort(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        for (int i = 0; i < nums.size() - 1; i += 2) {
            if (nums[i] != nums[i + 1])
                return nums[i];
        }
        return nums.back();
    }

    //////////////////////////////////////
    // 5️⃣ Set Method
    //////////////////////////////////////
    int singleNumberSet(vector<int>& nums) {
        unordered_set<int> s;
        for (int x : nums) {
            if (s.count(x))
                s.erase(x);
            else
                s.insert(x);
        }
        return *s.begin();
    }
};

int main() {
    vector<int> nums = {4, 1, 2, 1, 2};

    Solution obj;

    cout << "XOR Method        : " << obj.singleNumberXOR(nums) << endl;
    cout << "Linear Search     : " << obj.singleNumberLinear(nums) << endl;
    cout << "Hash Map Method   : " << obj.singleNumberMap(nums) << endl;
    cout << "Sorting Method   : " << obj.singleNumberSort(nums) << endl;
    cout << "Set Method       : " << obj.singleNumberSet(nums) << endl;

    return 0;
}
