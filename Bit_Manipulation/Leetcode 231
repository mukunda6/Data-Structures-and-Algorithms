// Problem: Power of Two
// Platform: LeetCode / CodeChef
//
// ------------------------------------------------------------
// Approaches:
// 1. Loop with Division
// 2. Left Shift
// 3. Bit Manipulation (Best)
// 4. Recursion
// ------------------------------------------------------------
//
// Time Complexity:
// Method 1: O(log n)
// Method 2: O(1)
// Method 3: O(1)
// Method 4: O(log n)
//
// Space Complexity:
// Method 1: O(1)
// Method 2: O(1)
// Method 3: O(1)
// Method 4: O(log n) (recursion stack)
// ------------------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

/* ================= METHOD 1: LOOP WITH DIVISION ================= */
bool isPowerOfTwo_Division(int n) {
    if (n <= 0) return false;
    while (n % 2 == 0) {
        n = n / 2;
    }
    return n == 1;
}

/* ================= METHOD 2: LEFT SHIFT ================= */
bool isPowerOfTwo_LeftShift(int n) {
    if (n <= 0) return false;
    for (int i = 0; i < 31; i++) {
        if ((1 << i) == n)
            return true;
    }
    return false;
}

/* ================= METHOD 3: BIT MANIPULATION (BEST) ================= */
bool isPowerOfTwo_Bit(int n) {
    if (n <= 0) return false;
    return (n & (n - 1)) == 0;
}

/* ================= METHOD 4: RECURSION ================= */
bool isPowerOfTwo_Recursive(int n) {
    if (n == 1) return true;          // base case
    if (n <= 0 || n % 2 != 0) return false;
    return isPowerOfTwo_Recursive(n / 2);
}

int main() {
    int n = 4;

    cout << "Using Division: "
         << (isPowerOfTwo_Division(n) ? "true" : "false") << endl;

    cout << "Using Left Shift: "
         << (isPowerOfTwo_LeftShift(n) ? "true" : "false") << endl;

    cout << "Using Bit Manipulation: "
         << (isPowerOfTwo_Bit(n) ? "true" : "false") << endl;

    cout << "Using Recursion: "
         << (isPowerOfTwo_Recursive(n) ? "true" : "false") << endl;

    return 0;
}
