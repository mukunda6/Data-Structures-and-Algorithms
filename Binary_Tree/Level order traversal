#include <bits/stdc++.h>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = right = NULL;
    }
};

class BinaryTree {
public:
    Node* root;

    BinaryTree() {
        root = NULL;
    }

    // ðŸ”¹ Height of tree
    int height(Node* node) {
        if (node == NULL) return 0;
        return max(height(node->left),
                   height(node->right)) + 1;
    }

    // ðŸ”¹ Print nodes at given level
    void printLevel(Node* root, int level) {
        if (root == NULL) return;

        if (level == 1) {
            cout << root->data << " ";
        } else {
            printLevel(root->left, level - 1);
            printLevel(root->right, level - 1);
        }
    }

    // ðŸ”¹ Level order traversal (recursive)
    void printLevelOrder(Node* root) {
        int h = height(root);

        for (int i = 1; i <= h; i++) {
            printLevel(root, i);
        }
    }
};

int main() {
    BinaryTree tree;

    tree.root = new Node(1);
    tree.root->left = new Node(2);
    tree.root->right = new Node(3);
    tree.root->left->left = new Node(4);
    tree.root->right->right = new Node(5);

    cout << "Level Order Traversal:\n";
    tree.printLevelOrder(tree.root);

    return 0;
}
