// Problem: Merge Two Sorted Linked Lists
// Platform: LeetCode / CodeChef
// Approach: Recursion
// Time Complexity: O(n + m)
// Space Complexity: O(n + m) (recursion stack)

#include <bits/stdc++.h>
using namespace std;

// Definition for singly-linked list
struct ListNode {
    int val;
    ListNode* next;
    ListNode(int x) : val(x), next(NULL) {}
};

// Recursive function to merge two sorted lists
ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
    // Base cases
    if (list1 == NULL) return list2;
    if (list2 == NULL) return list1;

    // Recursive cases
    if (list1->val <= list2->val) {
        list1->next = mergeTwoLists(list1->next, list2);
        return list1;
    } else {
        list2->next = mergeTwoLists(list1, list2->next);
        return list2;
    }
}

// Helper function to insert node at end
ListNode* insert(ListNode* head, int val) {
    if (!head) return new ListNode(val);
    ListNode* temp = head;
    while (temp->next) temp = temp->next;
    temp->next = new ListNode(val);
    return head;
}

// Helper function to print linked list
void printList(ListNode* head) {
    while (head) {
        cout << head->val << " -> ";
        head = head->next;
    }
    cout << "NULL" << endl;
}

int main() {
    // Create first sorted list: 1 -> 3 -> 5
    ListNode* list1 = NULL;
    list1 = insert(list1, 1);
    list1 = insert(list1, 3);
    list1 = insert(list1, 5);

    // Create second sorted list: 2 -> 4 -> 6
    ListNode* list2 = NULL;
    list2 = insert(list2, 2);
    list2 = insert(list2, 4);
    list2 = insert(list2, 6);

    cout << "List 1: ";
    printList(list1);

    cout << "List 2: ";
    printList(list2);

    // Merge lists
    ListNode* merged = mergeTwoLists(list1, list2);

    cout << "Merged List: ";
    printList(merged);

    return 0;
}
