// Problem: Fibonacci Number (All Approaches)
// Approaches:
// 1. Recursive (Brute Force)
// 2. Dynamic Programming (Bottom-Up)
// 3. Space Optimized (Best)
//
// Time Complexity:
// Recursive: O(2^n)
// DP: O(n)
// Space Optimized: O(n)
//
// Space Complexity:
// Recursive: O(n) (call stack)
// DP: O(n)
// Space Optimized: O(1)

#include <bits/stdc++.h>
using namespace std;

//////////////////////////
// 1️⃣ Recursive (Brute Force)
//////////////////////////
int fibRecursive(int n) {
    if (n <= 1) return n;
    return fibRecursive(n - 1) + fibRecursive(n - 2);
}

//////////////////////////
// 2️⃣ DP – Bottom-Up (Array)
//////////////////////////
int fibDP(int n) {
    if (n <= 1) return n;

    vector<int> dp(n + 1);
    dp[0] = 0;
    dp[1] = 1;

    for (int i = 2; i <= n; i++) {
        dp[i] = dp[i - 1] + dp[i - 2];
    }
    return dp[n];
}

//////////////////////////
// 3️⃣ Space Optimized (Best)
//////////////////////////
int fibOptimized(int n) {
    if (n <= 1) return n;

    int prev2 = 0, prev1 = 1;
    for (int i = 2; i <= n; i++) {
        int curr = prev1 + prev2;
        prev2 = prev1;
        prev1 = curr;
    }
    return prev1;
}

//////////////////////////
// Main Function
//////////////////////////
int main() {
    int n = 4;

    cout << "Recursive Approach: " << fibRecursive(n) << endl;
    cout << "DP (Bottom-Up): " << fibDP(n) << endl;
    cout << "Space Optimized: " << fibOptimized(n) << endl;

    return 0;
}
