#include <bits/stdc++.h>
using namespace std;

/* 1. Print numbers 1 to N */
void print1ToN(int n) {
    if (n == 0) return;
    print1ToN(n - 1);
    cout << n << " ";
}

/* 2. Print numbers N to 1 */
void printNTo1(int n) {
    if (n == 0) return;
    cout << n << " ";
    printNTo1(n - 1);
}

/* 3. Sum of digits */
int sumDigits(int n) {
    if (n == 0) return 0;
    return n % 10 + sumDigits(n / 10);
}

/* 4. Count digits */
int countDigits(int n) {
    if (n == 0) return 0;
    return 1 + countDigits(n / 10);
}

/* 5. Reverse a number */
int reverseNum(int n, int rev) {
    if (n == 0) return rev;
    return reverseNum(n / 10, rev * 10 + n % 10);
}

/* 6. Power (x^n) */
int power(int x, int n) {
    if (n == 0) return 1;
    return x * power(x, n - 1);
}

/* 7. GCD */
int gcd(int a, int b) {
    if (b == 0) return a;
    return gcd(b, a % b);
}

/* 8. Check palindrome string */
bool isPalindrome(string s, int l, int r) {
    if (l >= r) return true;
    if (s[l] != s[r]) return false;
    return isPalindrome(s, l + 1, r - 1);
}

/* 9. Fibonacci (Memoization) */
int fib(int n, vector<int>& dp) {
    if (n <= 1) return n;
    if (dp[n] != 0) return dp[n];
    return dp[n] = fib(n - 1, dp) + fib(n - 2, dp);
}

/* 10. Check array sorted */
bool isSorted(int arr[], int i, int n) {
    if (i == n - 1) return true;
    if (arr[i] > arr[i + 1]) return false;
    return isSorted(arr, i + 1, n);
}

/* 11. First occurrence */
int firstIndex(int arr[], int i, int n, int target) {
    if (i == n) return -1;
    if (arr[i] == target) return i;
    return firstIndex(arr, i + 1, n, target);
}

/* 12. Last occurrence */
int lastIndex(int arr[], int i, int n, int target) {
    if (i == n) return -1;
    int idx = lastIndex(arr, i + 1, n, target);
    if (idx != -1) return idx;
    return (arr[i] == target) ? i : -1;
}

/* 13. Count occurrences */
int countOcc(int arr[], int i, int n, int target) {
    if (i == n) return 0;
    return (arr[i] == target ? 1 : 0) + countOcc(arr, i + 1, n, target);
}

/* 14. Remove character */
string removeChar(string s, char ch) {
    if (s.empty()) return "";
    char c = s[0];
    string rest = removeChar(s.substr(1), ch);
    return (c == ch) ? rest : c + rest;
}

/* 15. Replace character */
string replaceChar(string s, char from, char to) {
    if (s.empty()) return "";
    char c = s[0];
    return string(1, (c == from ? to : c)) + replaceChar(s.substr(1), from, to);
}

/* 16. Count zeroes */
int countZeroes(int n) {
    if (n == 0) return 0;
    return (n % 10 == 0 ? 1 : 0) + countZeroes(n / 10);
}

/* 17. Check string sorted */
bool isSorted(string s, int i) {
    if (i == s.length() - 1) return true;
    if (s[i] > s[i + 1]) return false;
    return isSorted(s, i + 1);
}

/* 18. Move all x to end */
string moveX(string s) {
    if (s.empty()) return "";
    char c = s[0];
    string rest = moveX(s.substr(1));
    return (c == 'x') ? rest + c : c + rest;
}

/* 19. Sum of array */
int arraySum(int arr[], int i, int n) {
    if (i == n) return 0;
    return arr[i] + arraySum(arr, i + 1, n);
}

/* 20. Product of array */
int arrayProduct(int arr[], int i, int n) {
    if (i == n) return 1;
    return arr[i] * arrayProduct(arr, i + 1, n);
}

/* 21. Remove consecutive duplicates */
string removeDuplicates(string s) {
    if (s.length() <= 1) return s;
    if (s[0] == s[1])
        return removeDuplicates(s.substr(1));
    return s[0] + removeDuplicates(s.substr(1));
}

/* 22. Count ways to climb stairs */
int stairs(int n) {
    if (n == 0) return 1;
    if (n < 0) return 0;
    return stairs(n - 1) + stairs(n - 2);
}

/* 23. Power of two */
bool isPowerOfTwo(int n) {
    if (n == 1) return true;
    if (n == 0 || n % 2 != 0) return false;
    return isPowerOfTwo(n / 2);
}

/* 24. Reverse string */
string reverseStr(string s) {
    if (s.empty()) return "";
    return reverseStr(s.substr(1)) + s[0];
}

/* 25. Maximum element */
int maxElement(int arr[], int i, int n) {
    if (i == n - 1) return arr[i];
    return max(arr[i], maxElement(arr, i + 1, n));
}

/* ===================== MAIN FUNCTION ===================== */
int main() {

    int n = 5;
    int arr[] = {1, 2, 3, 2, 5};
    int size = 5;

    cout << "Print 1 to N: ";
    print1ToN(n);
    cout << "\n";

    cout << "Print N to 1: ";
    printNTo1(n);
    cout << "\n";

    cout << "Sum of digits (1234): " << sumDigits(1234) << "\n";
    cout << "Count digits (1234): " << countDigits(1234) << "\n";

    cout << "Reverse number (1234): " << reverseNum(1234, 0) << "\n";
    cout << "Power (2^5): " << power(2, 5) << "\n";
    cout << "GCD (48,18): " << gcd(48, 18) << "\n";

    string s = "madam";
    cout << "Is palindrome (madam): " << (isPalindrome(s, 0, s.length() - 1) ? "Yes" : "No") << "\n";

    vector<int> dp(10, 0);
    cout << "Fibonacci (7): " << fib(7, dp) << "\n";

    cout << "Array sorted: " << (isSorted(arr, 0, size) ? "Yes" : "No") << "\n";
    cout << "First index of 2: " << firstIndex(arr, 0, size, 2) << "\n";
    cout << "Last index of 2: " << lastIndex(arr, 0, size, 2) << "\n";
    cout << "Count of 2: " << countOcc(arr, 0, size, 2) << "\n";

    cout << "Remove 'a' from banana: " << removeChar("banana", 'a') << "\n";
    cout << "Replace a->x in apple: " << replaceChar("apple", 'a', 'x') << "\n";
    cout << "Move x in axbxxc: " << moveX("axbxxc") << "\n";
    cout << "Reverse string (hello): " << reverseStr("hello") << "\n";
    cout << "Max element: " << maxElement(arr, 0, size) << "\n";

    return 0;
}
