// Problem: Subsets
// Platform: LeetCode / CodeChef
//
// -------------------------------------------------
// Approach: Backtracking
// -------------------------------------------------
// Idea:
// - At each index, we have two choices:
//   1. Include current element
//   2. Exclude current element
//
// Time Complexity: O(2^n)
// Space Complexity: O(n) [recursion stack]
// -------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    void getAllSubsets(vector<int>& nums,
                       vector<int>& current,
                       int index,
                       vector<vector<int>>& allSubsets) {

        if (index == nums.size()) {
            allSubsets.push_back(current);
            return;
        }

        // Include element
        current.push_back(nums[index]);
        getAllSubsets(nums, current, index + 1, allSubsets);

        // Backtrack (exclude element)
        current.pop_back();
        getAllSubsets(nums, current, index + 1, allSubsets);
    }

    vector<vector<int>> subsets(vector<int>& nums) {
        vector<vector<int>> allSubsets;
        vector<int> current;
        getAllSubsets(nums, current, 0, allSubsets);
        return allSubsets;
    }
};

int main() {
    Solution obj;
    vector<int> nums = {1, 2, 3};

    vector<vector<int>> result = obj.subsets(nums);

    cout << "All Subsets:\n";
    for (auto& subset : result) {
        cout << "[ ";
        for (int x : subset) cout << x << " ";
        cout << "]\n";
    }

    return 0;
}
