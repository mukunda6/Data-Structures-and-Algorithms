// Problem: Uncommon Words from Two Sentences
// Platform: LeetCode / CodeChef
//
// ------------------------------------------------------------
// Method 1: Two Hash Maps
// Method 2: Single Hash Map (Optimized)
// ------------------------------------------------------------
//
// Time Complexity:
// Method 1: O(n + m)
// Method 2: O(n + m)
//
// Space Complexity:
// Method 1: O(n + m)
// Method 2: O(n + m)
// ------------------------------------------------------------

#include <bits/stdc++.h>
using namespace std;

/* ================= METHOD 1: TWO HASH MAPS ================= */
vector<string> uncommonFromSentences_Method1(string s1, string s2) {
    unordered_map<string, int> m1, m2;
    vector<string> ans;
    string word;

    stringstream ss1(s1), ss2(s2);

    while (ss1 >> word) {
        m1[word]++;
    }
    while (ss2 >> word) {
        m2[word]++;
    }

    for (auto &p : m1) {
        if (p.second == 1 && m2[p.first] == 0) {
            ans.push_back(p.first);
        }
    }
    for (auto &p : m2) {
        if (p.second == 1 && m1[p.first] == 0) {
            ans.push_back(p.first);
        }
    }

    return ans;
}

/* =============== METHOD 2: SINGLE HASH MAP (OPTIMAL) =============== */
vector<string> uncommonFromSentences_Method2(string s1, string s2) {
    unordered_map<string, int> m;
    vector<string> ans;
    string word;

    stringstream ss1(s1), ss2(s2);

    while (ss1 >> word) {
        m[word]++;
    }
    while (ss2 >> word) {
        m[word]++;
    }

    for (auto &p : m) {
        if (p.second == 1) {
            ans.push_back(p.first);
        }
    }

    return ans;
}

int main() {
    string s1 = "this apple is sweet";
    string s2 = "this apple is sour";

    cout << "Method 1 Output: ";
    vector<string> res1 = uncommonFromSentences_Method1(s1, s2);
    for (string &w : res1) cout << w << " ";
    cout << endl;

    cout << "Method 2 Output: ";
    vector<string> res2 = uncommonFromSentences_Method2(s1, s2);
    for (string &w : res2) cout << w << " ";
    cout << endl;

    return 0;
}
