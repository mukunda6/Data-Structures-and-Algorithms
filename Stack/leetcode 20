// Problem: Valid Parentheses
// Platform: LeetCode / CodeChef
// Time Complexity: O(n)
// Space Complexity: O(n)

#include <bits/stdc++.h>
using namespace std;

// Function to check valid parentheses
bool isValid(string s) {
    stack<char> st;

    for (int i = 0; i < s.size(); i++) {
        if (s[i] == '{' || s[i] == '[' || s[i] == '(') {
            st.push(s[i]);
        } else {
            if (st.empty()) {
                return false;
            }

            if ((s[i] == ')' && st.top() == '(') ||
                (s[i] == ']' && st.top() == '[') ||
                (s[i] == '}' && st.top() == '{')) {
                st.pop();
            } else {
                return false;
            }
        }
    }
    return st.empty();
}

int main() {
    // Example test cases
    string s1 = "()";
    string s2 = "()[]{}";
    string s3 = "(]";
    string s4 = "([)]";
    string s5 = "{[]}";

    cout << isValid(s1) << endl; // 1
    cout << isValid(s2) << endl; // 1
    cout << isValid(s3) << endl; // 0
    cout << isValid(s4) << endl; // 0
    cout << isValid(s5) << endl; // 1

    return 0;
}
